<div style="padding: 25px;width: 400px;" id="bookForm">
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :author %><br />
      <%= select("book", "author_id", Author.all.collect {|a| [ a.name, a.id ] }, { :include_blank => 'Select Book Author' })%>
    </div>
    <div class="field">
      <%= f.label :price %><br />
      <%= f.text_field :price %>
    </div>
    <div class="field">
      <%= f.label :quantity %><br />
      <%= f.number_field :quantity %>
    </div>
    <div class="field">
      <%= f.label :location_id %><br />
      <%= select("book", "location_id", Location.all.collect {|a| [ a.name, a.id ] }, { :include_blank => 'Select Book Location' })%>
    </div>
    <div class="actions">
      <%= submit_tag("Save", :id=>"book_submit",:class => "btn-share")%>
    </div>
  <% end %>
</div>