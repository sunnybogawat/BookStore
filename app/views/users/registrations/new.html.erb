<div id="loginDiv">
  <div style="margin-left: 275px;padding: 25px;width: 400px;height: 275px;">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :first_name %><br />
        <%= f.text_field :first_name, :autofocus => true %></div>


      <div><%= f.label :last_name %><br />
        <%= f.text_field :last_name, :autofocus => true %></div>

      <div><%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true %></div>

      <div><%= f.label :password %><br />
        <%= f.password_field :password %></div>

      <div><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %></div>

      <div style="margin-left: 200px;margin-top: 5px;"><%= submit_tag("Join", :id=>"login",:class => "btn-share")%></div>
    <% end %>
  </div>
</div>
